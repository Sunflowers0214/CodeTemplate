#macro(firstToUpper $field)$field.toUpperCase().substring(0,1)$field.substring(1)#end
##首字母小写
#macro(firstToLower $field)$field.toLowerCase().substring(0,1)$field.substring(1)#end
var #firstToLower(${tableInfo.tableLabel})AddUrl=rootPath+"/${languagePath.toLowerCase()}/insert_#firstToLower($tableInfo.tableLabel).action";

$(function (){
	setPageControl("na_",#firstToLower($tableInfo.tableLabel)DataName,"span");
    $.metadata.setType("attr", "validate");
	$("${builderHelper.getjing()}#firstToUpper(${tableInfo.tableLabel})AddForm").validate({
		errorPlacement: function (lable, element){
			errorPlacement(lable, element);
		},
		success: function (lable){
	    	success(lable);
	    },
	    submitHandler: function (){
	    	submitHandler();
	    	submit#firstToUpper(${tableInfo.tableLabel})Add();
	    }
	});
	initDataPicker();
    WoohForm.createForm('#firstToUpper(${tableInfo.tableLabel})AddForm',{});
});
    
//增加数据
function submit#firstToUpper(${tableInfo.tableLabel})Add(){
	ajaxSubmit("a_",#firstToLower(${tableInfo.tableLabel})AddUrl,#firstToLower(${tableInfo.tableLabel})Management,ADD,3,"goback()");
}