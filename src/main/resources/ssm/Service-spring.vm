##首字母大写
#macro(firstToUpper $field)
$field.toUpperCase().substring(0,1)$field.substring(1)##
#end
##首字母小写
#macro(firstToLower $field)
$field.toLowerCase().substring(0,1)$field.substring(1)##
#end
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

#foreach($table in $tableModelList)
    <!-- $table.tableComment -->
  	<bean id="#firstToLower($table.tableLabel)Service" class="${packageName}.${projectName.toLowerCase()}.service.impl.#firstToUpper($table.tableLabel)ServiceImpl">
		<property name="#firstToLower($table.tableLabel)Dao" ref="#firstToLower($table.tableLabel)Dao"/>
	</bean>

#end
</beans>

