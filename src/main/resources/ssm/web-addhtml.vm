##首字母大写
#macro(firstToUpper $field)$field.toUpperCase().substring(0,1)$field.substring(1)#end
##首字母小写
#macro(firstToLower $field)$field.toLowerCase().substring(0,1)$field.substring(1)#end
##字母小写
#macro(nametoLower $field)$field.toLowerCase()#end
<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<script src="./${languagePath.toLowerCase()}/js/#firstToUpper($tableInfo.tableLabel)Add.js" type="text/javascript"></script>
<div class="editForm editForm0">
	<form id="#firstToUpper(${tableInfo.tableLabel})AddForm" name="#firstToUpper(${tableInfo.tableLabel})AddForm" method="post">
#foreach($field in $tableInfo.pkColumnList)
		<input type="hidden" id="a_#firstToLower($field.columnLabel)" name="a_#firstToLower($field.columnLabel)"/>
#end
		<div class="row">
#foreach($field in $tableInfo.noteshuColList)
#if(${field.columnSimpleClassName.toLowerCase()}=="date")
			<div class="col-md-4 datePicker">
				<label id="na_#firstToLower($field.columnLabel)" #if($field.nullable!=true)class="required"#end></label>
				<input type="text" ltype="text" class="dateMark" id="a_#firstToLower($field.columnLabel)" name="a_#firstToLower($field.columnLabel)" validate="{maxlength:$field.precision#if($field.nullable==false),required:true#end}"/>
			</div>
#else
			<div class="col-md-4">
		        <label id="na_#firstToLower($field.columnLabel)" #if($field.nullable!=true)class="required"#end></label>
				<input type="text" ltype="text" id="a_#firstToLower($field.columnLabel)" name="a_#firstToLower($field.columnLabel)" validate="{maxlength:$field.precision#if($field.nullable==false),required:true#end}"/>
            </div>
#end
#if($velocityCount%3==0&&$velocityCount!=${tableInfo.noteshuColList.size()})
		</div>
		<div class="row">
#end	
#end	
		</div>
	</form>
	<center>
		<input type="button" value="保存" class="savebtn" id="saveAdd" onclick="$('${builderHelper.getjing()}#firstToUpper(${tableInfo.tableLabel})AddForm').submit()"/>
	    <input type="button" value="关闭" class="closebtn" id="closeAdd" onclick="saveDialogClose();"/>
	</center>
</div>